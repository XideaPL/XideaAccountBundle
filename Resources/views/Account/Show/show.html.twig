{% extends 'XideaAccountBundle::main.html.twig' %}
{% block xidea_account_header_title %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'account_action.show.title'|trans({'%account_name%':model.name}) }}</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
{% endblock %}
{% block xidea_account_main %}
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    {{ 'account_action.show.details.title'|trans }}
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table class="table table-bordered table-striped">
                        <tbody>
                          <tr>
                            <th scope="row">
                              <code>{{ 'account.name'|trans }}</code>
                            </th>
                            <td>{{ model.name }}</td>
                          </tr>
                        </tbody>
                      </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
{% endblock %}
